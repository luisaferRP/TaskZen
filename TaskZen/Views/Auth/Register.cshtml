<div class="container-sm text-center" style="max-width: 400px; margin: auto;">
    <h1>Registro</h1>

    <form class="container-sm p-4">
        <div class="container-sm mb-2 text-start">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="name" placeholder="Ingresa tu nombre" required>
        </div>
        <div class="container-sm mb-2 text-start">
            <label for="lastName" class="form-label">Apellido</label>
            <input type="text" class="form-control" id="lastName" placeholder="Ingresa tu apellido" required>
        </div>
        <div class="container-sm mb-2 text-start">
            <label for="email" class="form-label">Correo Electrónico</label>
            <input type="email" class="form-control" id="email" placeholder="Ingresa tu correo" required>
        </div>
        <div class="container-sm mb-2 text-start">
            <label for="dateBirth" class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control" id="dateBirth" required>
        </div>
        <div class="container-sm mb-2 text-start">
            <label for="password" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="password" placeholder="Ingresa tu contraseña" required>
        </div>
        <div class="container-sm mb-2 text-start">
            <label for="confirmPassword" class="form-label">Confirmar Contraseña</label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirma tu contraseña" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Registrarse</button>
    </form>
    <div class="mt-3">
        <a class="text-decoration-none" asp-area="" asp-controller="Auth" asp-action="Index">Inicio de Sesión</a>
    </div>
</div>
