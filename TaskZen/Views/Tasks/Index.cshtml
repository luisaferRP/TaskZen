@{
}
@model List<TaskZen.Models.Task.TaskModel>

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
        <h3 class="fw-bold">Mis tareas</h3>
        <div>
            <button class="p-2 bg-info bg-opacity-10 border border-info rounded-4">
                <i class="bi bi-plus-lg"></i> Nueva tarea
            </button>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">

        <!-- To Do -->
        <div class="col-md-4">
            <div class="task-column todo" id="ToDo">
                <h3 class="text-dark">To Do</h3>
                <div class="task-list">
                    @foreach (var task in Model.Where(t => t.Status == StatusLevel.ToDo))
                    {
                        @await Html.PartialAsync("_TaskCard", task)
                    }
                </div>
            </div>
        </div>

        <!-- In Progres -->
        <div class="col-md-4">
            <div class="task-column in-progress" id="InProgress">
                <h3 class="text-dark">InProgress</h3>
                <div class="task-list">
                    @foreach (var task in Model.Where(t => t.Status == StatusLevel.InProgress))
                    {
                        @await Html.PartialAsync("_TaskCard", task)
                    }
                </div>
            </div>
        </div>

        <!-- Done -->
        <div class="col-md-4">
            <div class="task-column done" id="Done">
                <h3 class="text-dark">Done</h3>
                <div class="task-list">
                    @foreach (var task in Model.Where(t => t.Status == StatusLevel.Done))
                    {
                        @await Html.PartialAsync("_TaskCard", task)
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .task-column {
        border-radius: 12px;
        padding: 15px;
        margin: 10px;
        min-height: 300px;
        box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
    }

    .todo {
        background: #e5d4ff91;
        border: 1px solid #7B2CBF;
    }

    .in-progress {
        background: #fad9b887;
        border: 1px solid #E07B39;
    }

    .done {
        background: #d4f8e8a6;
        border: 1px solid #2D6A4F;
    }

    .task-list {
        min-height: 100px;
        padding: 10px;
    }

    .task-card {
        padding: 10px;
        background: white;
        border-radius: 5px;
        margin-bottom: 10px;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
    }
</style>
